<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89DBEC"
    tools:context="com.example.elias.sagetext.MainActivity">

    <RelativeLayout
        android:layout_width="339dp"
        android:layout_height="798dp"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="18dp">


        <EditText
            android:id="@+id/editText"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:layout_marginTop="44dp"
            android:background="#30FF31"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="HÃ¶lzli"
            android:padding="20dp"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="258dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <Button
            android:id="@+id/button"
            android:layout_width="353dp"
            android:layout_height="61dp"
            android:layout_alignEnd="@+id/editText"
            android:layout_alignRight="@+id/editText"
            android:layout_below="@+id/editText"
            android:layout_marginTop="58dp"
            android:text="@string/sag_es"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="156dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#89DBEC"

            android:text="@string/beschriftung"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/button"
            android:layout_marginTop="96dp"
            android:background="#30FF31"
            android:textColor="#00ff11"
            android:textAlignment="center"
            android:visibility="visible" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
